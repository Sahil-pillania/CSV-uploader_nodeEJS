<html>

<head>
  <meta charset="UTF-8">
  <!-- // bootstrap css  -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>CSV Saver</title>
</head>

<body class="bg-dark font-italic">
  <div class="container">
    <div class=" nav justify-content-center" style="margin-top:100px;">
      <div class="card border-2 rounded-0  mb-3 ">
        <div class="card-header rounded-0 text-center">
          <h5>Upload your csv file here</h5>
        </div>
        <div class="card-body rounded-0">
          <form action="/" method="post" enctype="multipart/form-data" class="d-flex border-info border-2">
            <input type="file" name="csv"><br><br>
            <button type="submit" class="btn btn-xl btn-success font-famil">submit</button>
          </form>
        </div>
      </div>
    </div><br>
    <!-- // table data from db  -->
    <%if(data){%>
      <div>
        <div align="center">
          <table class="bg-light" border="2" cellpadding="15">
            <!-- <thead> -->
            <tr class="">
              <th>S.no</th>
              <th style="padding-right: 1em">First Name</th>
              <th style="padding-right: 1em">last Name</th>
              <th style="padding-right:2em;padding-left:2em;">Age</th>
            </tr>
            <!-- </thead> -->
            <%for(var i=0;i< data.length;i++){%>
              <tr class="text-center">
                <td>
                  <%= i+1%>
                </td>
                <td style="padding-right: 1em">
                  <%= data[i].FirstName%>
                </td>
                <td style="padding-left: 1em;">
                  <%= data[i].LastName%>
                </td>
                <td style="padding-right:1em;padding-left:1em;">
                  <%= data[i].age%>
                </td>

              </tr>
              <%}%>
          </table>
        </div>
      </div>
      <%}%>
        <br>
</body>

</html>